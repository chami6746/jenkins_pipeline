pipeline {
    agent any
    environment {
        EMAIL_RECIPIENT = 'hasini.chameeliya@gmail.com'
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building the code...'
                // Example: sh 'mvn clean install'
            }
        }
        stage('Unit and Integration Tests') {
            steps {
                echo 'Running unit and integration tests...'
                // Example: sh 'mvn test'
            }
        }
        stage('Code Analysis') {
            steps {
                echo 'Performing code analysis...'
                // Example: sh 'sonar-scanner'
            }
        }
        stage('Security Scan') {
            steps {
                echo 'Performing security scan...'
                // Example: sh 'dependency-check.sh'
            }
        }
        stage('Deploy to Staging') {
            steps {
                echo 'Deploying to staging server...'
                // Example: sh 'deploy.sh staging'
            }
        }
        stage('Integration Tests on Staging') {
            steps {
                echo 'Running integration tests on staging...'
                // Example: sh 'integration-tests.sh'
            }
        }
        stage('Deploy to Production') {
            steps {
                echo 'Deploying to production server...'
                // Example: sh 'deploy.sh production'
            }
        }
    }
    post {
        success {
            emailext (
                to: "${EMAIL_RECIPIENT}",
                subject: "SUCCESS: Build ${env.BUILD_NUMBER}",
                body: "The build was successful. Check the build details at ${env.BUILD_URL}",
                attachLog: true
            )
        }
        failure {
            emailext (
                to: "${EMAIL_RECIPIENT}",
                subject: "FAILURE: Build ${env.BUILD_NUMBER}",
                body: "The build failed. Check the build details at ${env.BUILD_URL}",
                attachLog: true
            )
        }
        unstable {
            emailext (
                to: "${EMAIL_RECIPIENT}",
                subject: "UNSTABLE: Build ${env.BUILD_NUMBER}",
                body: "The build is unstable. Check the build details at ${env.BUILD_URL}",
                attachLog: true
            )
        }
    }
}
